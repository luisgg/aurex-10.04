#!/bin/sh

set -e

case "$1" in
  configure)
    # unmark all the packages from apt autoremove
    apt-mark-metapackage unmark-all _@_DISTRIBUTOR_ID_@_-_@_SEED_@_
  ;;

  abort-upgrade|abort-remove|abort-deconfigure)
  ;;

  *)
    echo "postinst called with unknown argument \`$1'" >&2
    exit 1
  ;;
esac

#DEBHELPER#

exit 0
