#!/bin/sh -e

case "$1" in
    configure)
	# add wbackup user 
	if ! getent passwd wbackup >/dev/null; then
                adduser --quiet --system --home /var/wbackup --shell /bin/sh --ingroup www-data wbackup
		mkdir -p /var/wbackup/.ssh
		chown wbackup:www-data /var/wbackup/.ssh
		chmod 700 /var/wbackup/.ssh
		ssh-keygen -t dsa -q -f /var/wbackup/.ssh/id_dsa -N ""
		chown wbackup:www-data  /var/wbackup/.ssh/id_dsa
        fi

	;;
    abort-upgrade|abort-remove|abort-deconfigure)
    	;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    	;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0

