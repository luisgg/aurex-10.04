#!/usr/bin/make -f

package = nagios-virt

clean:
	dh_clean
	rm -f build
	[ ! -f Makefile ] || $(MAKE) clean
	rm -f config.h config.log config.status Makefile

install: build
	dh_clean
	dh_installdirs
	$(MAKE) prefix=$(CURDIR)/debian/$(package)/usr install

build:
	./configure --with-nagios-configdir=/etc/nagios3 --prefix=/usr NAGIOS="/usr/sbin/nagios3"
	$(MAKE)
	touch build

binary-indep: install
# There are no architecture-independent files to be uploaded
# generated by this package.  If there were any they would be
# made here.

binary-arch: install
	dh_installdocs -a debian/USAGE
	dh_installchangelogs
	dh_strip -a
	dh_compress -a
	dh_fixperms -a
	dh_installdeb -a
	dh_shlibdeps -a
	dh_gencontrol -a
	dh_md5sums -a
	dh_builddeb -a

binary: binary-indep binary-arch

.PHONY: binary binary-arch binary-indep clean
