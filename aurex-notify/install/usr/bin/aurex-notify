LIB_FILE="/usr/share/aurex-notify/aurex-notify-common.sh"
[ -r "$LIB_FILE" ] || exit 1
. ${LIB_FILE}
if [ "$1" = "-u" ] && [ "$2" ] ; then
   export SOCKET_BASENAME="$2"
   shift 2
fi
 
DATA="$@"
if [ "$1" ] ; then
   for SOCKET in $(list_sockets) ; do
      echo "$DATA" |hose localhost "$SOCKET" --unix --slave 2>/dev/null || true
   done
fi
exit 0
